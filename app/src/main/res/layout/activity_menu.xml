<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuActivity"
    android:background="@drawable/ardoise">



    <TextView
        style="@android:style/TextAppearance.Large"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/smoky_black"
        android:gravity="center"
        android:text="@string/Nom"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="45dp"
        android:fontFamily="@font/learningcurve"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/black">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@drawable/home"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@drawable/search"
            android:onClick="search"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@drawable/filter"
            android:layout_weight="1"
            android:onClick="filtre"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@drawable/person"
            android:onClick="call"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@drawable/panier"
            android:onClick="panier"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="@drawable/help"
            android:onClick="help"
            android:clickable="true"
            android:layout_weight="1"/>

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/black"/>
    <ListView
        android:id="@+id/lv_menu"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="Menu"
        android:divider="#ffff"
        android:dividerHeight="1sp"
        android:padding="15dp"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/black"/>
</LinearLayout>