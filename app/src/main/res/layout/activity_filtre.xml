<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ardoise"
    android:orientation="vertical">

    <TextView
        style="@android:style/TextAppearance.Large"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/smoky_black"
        android:gravity="center"
        android:text="@string/Nom"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="45dp"
        android:fontFamily="@font/learningcurve"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:paddingTop="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <CheckBox
            android:id="@+id/entree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="entrée"
            android:onClick="entree"
            android:fontFamily="@font/learningcurve"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:buttonTint="#ffffff"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <CheckBox
            android:id="@+id/plat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="plat"
            android:onClick="plat"
            android:fontFamily="@font/learningcurve"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:buttonTint="#ffffff"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <CheckBox
            android:id="@+id/dessert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="dessert"
            android:onClick="dessert"
            android:fontFamily="@font/learningcurve"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:buttonTint="#ffffff"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <CheckBox
            android:id="@+id/vege"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="végétarien"
            android:onClick="vege"
            android:fontFamily="@font/learningcurve"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:buttonTint="#ffffff"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <CheckBox
            android:id="@+id/carni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="carnivore"
            android:onClick="carni"
            android:fontFamily="@font/learningcurve"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:buttonTint="#ffffff"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="68dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:backgroundTint="@color/thistle"
        android:onClick="send"
        android:text="résultat"
        android:textColor="@color/deep_ruby" />


</LinearLayout>